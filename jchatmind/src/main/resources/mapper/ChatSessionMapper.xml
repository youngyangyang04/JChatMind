<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kama.jchatmind.mapper.ChatSessionMapper">

    <resultMap id="BaseResultMap" type="com.kama.jchatmind.model.entity.ChatSession">
        <id property="id" column="id" jdbcType="VARCHAR"/>
        <result property="agentId" column="agent_id" jdbcType="VARCHAR"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="metadata" column="metadata" jdbcType="VARCHAR"/>
        <result property="createdAt" column="created_at" jdbcType="TIMESTAMP"/>
        <result property="updatedAt" column="updated_at" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,agent_id,title,
        metadata,created_at,updated_at
    </sql>

    <insert id="insert" parameterType="com.kama.jchatmind.model.entity.ChatSession"
            keyColumn="id" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO chat_session
        (
            agent_id,
            title,
            metadata,
            created_at,
            updated_at
        )
        VALUES
            (
                CAST(#{agentId} AS uuid),
                #{title},
                CAST(#{metadata} AS jsonb),
                #{createdAt},
                #{updatedAt}
            )
    </insert>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT
            id,
            agent_id,
            title,
            metadata::text AS metadata,
            created_at,
            updated_at
        FROM chat_session
        WHERE id = CAST(#{id} AS uuid)
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
            id,
            agent_id,
            title,
            metadata::text AS metadata,
            created_at,
            updated_at
        FROM chat_session
        ORDER BY updated_at DESC
    </select>

    <select id="selectByAgentId" resultMap="BaseResultMap">
        SELECT
            id,
            agent_id,
            title,
            metadata::text AS metadata,
            created_at,
            updated_at
        FROM chat_session
        WHERE agent_id = CAST(#{agentId} AS uuid)
        ORDER BY updated_at DESC
    </select>

    <delete id="deleteById">
        DELETE FROM chat_session WHERE id = CAST(#{id} AS uuid)
    </delete>

    <update id="updateById" parameterType="com.kama.jchatmind.model.entity.ChatSession">
        UPDATE chat_session
        <set>
            <if test="agentId != null">
                agent_id = CAST(#{agentId} AS uuid),
            </if>
            <if test="title != null">
                title = #{title},
            </if>
            <if test="metadata != null">
                metadata = CAST(#{metadata} AS jsonb),
            </if>
            updated_at = NOW()
        </set>
        WHERE id = CAST(#{id} AS uuid)
    </update>
</mapper>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kama.jchatmind.mapper.ChatMessageMapper">

    <resultMap id="BaseResultMap" type="com.kama.jchatmind.model.entity.ChatMessage">
        <id property="id" column="id" jdbcType="VARCHAR"/>
        <result property="sessionId" column="session_id" jdbcType="VARCHAR"/>
        <result property="role" column="role" jdbcType="VARCHAR"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="metadata" column="metadata" jdbcType="VARCHAR"/>
        <result property="createdAt" column="created_at" jdbcType="TIMESTAMP"/>
        <result property="updatedAt" column="updated_at" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,session_id,role,
        content,metadata,created_at,
        updated_at
    </sql>

    <insert id="insert" parameterType="com.kama.jchatmind.model.entity.ChatMessage"
            keyColumn="id" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO chat_message
        (
            session_id,
            role,
            content,
            metadata,
            created_at,
            updated_at
        )
        VALUES
            (
                CAST(#{sessionId} AS uuid),
                #{role},
                #{content},
                CAST(#{metadata} AS jsonb),
                #{createdAt},
                #{updatedAt}
            )
    </insert>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT
            id,
            session_id,
            role,
            content,
            metadata::text AS metadata,
            created_at,
            updated_at
        FROM chat_message
        WHERE id = CAST(#{id} AS uuid)
    </select>

    <select id="selectBySessionId" resultMap="BaseResultMap">
        SELECT
            id,
            session_id,
            role,
            content,
            metadata::text AS metadata,
            created_at,
            updated_at
        FROM chat_message
        WHERE session_id = CAST(#{sessionId} AS uuid)
        ORDER BY created_at ASC
    </select>

    <delete id="deleteById">
        DELETE FROM chat_message WHERE id = CAST(#{id} AS uuid)
    </delete>

    <update id="updateById" parameterType="com.kama.jchatmind.model.entity.ChatMessage">
        UPDATE chat_message
        <set>
            <if test="sessionId != null">
                session_id = CAST(#{sessionId} AS uuid),
            </if>
            <if test="role != null">
                role = #{role},
            </if>
            <if test="content != null">
                content = #{content},
            </if>
            <if test="metadata != null">
                metadata = CAST(#{metadata} AS jsonb),
            </if>
            updated_at = NOW()
        </set>
        WHERE id = CAST(#{id} AS uuid)
    </update>
</mapper>
